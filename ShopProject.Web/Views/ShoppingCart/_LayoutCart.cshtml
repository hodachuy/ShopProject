        <span style="text-transform:uppercase"> {{ProductName}} </span>
        <span id="amount_{{ProductId}}">{{Amount}} </span>₫
        <p class="variant-title"></p>
        <input type="hidden" min="0" data-id="{{ProductId}}" data-price="{{Price}}" value="{{Quantity}}" data-quantity="{{QuantityDb}}" class="input txtQuantity" id="dfQuantity_{{ProductId}}" />

