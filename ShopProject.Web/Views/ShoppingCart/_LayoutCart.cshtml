<script id="tplCheckOut" type="x-tmpl-mustache">
    <div class="list_item cart-item">
        <span style="display:none">{{ProductId}}</span>
        <span style="display:none">{{Image}}</span>
        <span style="display:none">{{PriceFormat}}</span>
        <span style="display:none">{{Price}}</span>
